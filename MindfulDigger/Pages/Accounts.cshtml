@page
@model MindfulDigger.Pages.AccountsModel
@{
    ViewData["Title"] = "Moje konto";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md text-center">
        <h2 class="text-2xl font-semibold mb-6">Moje konto</h2>
        @if (Model.UserEmail != null)
        {
            <p class="mb-4 text-gray-700">Zalogowano jako: <strong>@Model.UserEmail</strong></p>
        }
        <form method="post">
            <button type="submit" class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded focus:outline-none focus:shadow-outline">
                Wyloguj siÄ™
            </button>
        </form>
    </div>
</div>
