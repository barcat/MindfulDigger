@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold mb-6 text-center">Logowanie</h2>
        <div x-data="loginForm" class="space-y-4">
            <input x-model="email" type="email" placeholder="Email" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" />
            <input x-model="password" type="password" placeholder="Hasło" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" />
            <button @@click="login" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition">Zaloguj się</button>
            <div x-text="error" class="text-red-600 text-sm min-h-[1.5em]"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.SUPABASE_URL = '@(Environment.GetEnvironmentVariable("SUPABASE_URL"))';
        window.SUPABASE_KEY = '@(Environment.GetEnvironmentVariable("SUPABASE_KEY"))';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@@supabase/supabase-js"></script>
    <script src="~/js/login.supabase.js"></script>
}
