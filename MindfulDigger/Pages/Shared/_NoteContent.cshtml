<div class="bg-white rounded-lg shadow-md p-8 border border-gray-200">
    <div class="flex flex-col space-y-6">
        <div class="flex items-center space-x-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div class="text-gray-500 text-sm" x-text="note ? formatDate(note.creationDate) : ''"></div>
        </div>
        <div class="text-gray-800 whitespace-pre-wrap break-words leading-relaxed min-h-[200px] text-lg" x-text="note ? note.content : ''"></div>
        
        <!-- Delete button -->
        <div class="flex justify-end mt-6">
            <button 
                @@click="deleteNote()"
                class="inline-flex items-center px-4 py-2 text-sm text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition-colors duration-200"
                :disabled="isDeleting">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                <span x-text="isDeleting ? 'Usuwanie...' : 'Usuń notatkę'"></span>
            </button>
        </div>
    </div>
</div>
